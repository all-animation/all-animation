.journal {
	setAnimation(journal 1 2s ease-in forwards);
}

/* JOURNAL */

@-webkit-keyframes journal {
	0% {
		-webkit-transform: scale(0) rotate(-360deg);
	}
	80% {
		-webkit-transform: scale(0.5) rotate(-180deg);
	}
	100% { 
		-webkit-transform: scale(1) rotate(0); 
		opacity 1; 
		visibility visible;
	}
}

